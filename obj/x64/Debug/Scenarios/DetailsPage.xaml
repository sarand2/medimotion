<Page x:ConnectionId='1'
    x:Class="MediMotion.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediMotion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='2' Label="Delete Item" Icon="Delete"                    />
        </CommandBar>
    </Page.BottomAppBar>

    <StackPanel Padding="24,0" Grid.Row="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='3' Style="{ThemeResource TitleTextBlockStyle}"
                               Margin="0,8"       
                                                                   />
        <TextBlock x:ConnectionId='4' Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="0,9" 
                                                                            />
        <TextBlock x:ConnectionId='5' Style="{ThemeResource BodyTextBlockStyle}" 
                                   Margin="0,9" 
                                                                               />
        <TextBlock x:ConnectionId='6' Style="{ThemeResource BodyTextBlockStyle}" 
                                   Margin="0,9" 
                                   TextWrapping="WrapWholeWords"
                                                                             />
    </StackPanel>
</Page>

