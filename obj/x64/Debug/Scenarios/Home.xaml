<Page x:ConnectionId='1'
    x:Class="MediMotion.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:data="using:MediMotion.Model"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Border CornerRadius="0,0,30,30" Margin="10,10,10,10" Width="1350">
                <CalendarView x:ConnectionId='3'                                                                        HorizontalAlignment="Center" Width="1380" Height="291" />
            </Border>
            <controls:DataGrid x:ConnectionId='2' x:Name="dataGrid1" 
                    Height="600" Margin="12"
                    AutoGenerateColumns="False"
                                                              >
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn 
            Header="Time" 
            Width="200"
            Binding="{Binding Date}" 
            FontSize="20" />
                    <controls:DataGridTextColumn 
            Header="First Name" 
            Width="300"
            Binding="{Binding FirstName}" 
            FontSize="20" />
                    <controls:DataGridTextColumn 
            Header="Last Name" 
            Width="300"
            Binding="{Binding LastName}" 
            FontSize="20" />
                    <controls:DataGridTextColumn 
            Header="Method" 
            Width="300"
            Binding="{Binding Method}" 
            FontSize="20" />
                     <controls:DataGridTextColumn 
            Header="Category" 
            Width="400"
            Binding="{Binding Category}" 
            FontSize="20" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>

        </StackPanel>
    </Grid>
</Page>

